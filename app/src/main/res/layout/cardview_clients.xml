<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"

android:layout_width="fill_parent"
android:layout_margin="6dp"
android:layout_height="match_parent"
app:cardBackgroundColor="@color/blueSky"
app:cardElevation="6dp"
app:contentPadding="@dimen/cardview_default_radius">

<LinearLayout
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lblNombreSucursal"
        android:padding="12dp"
        android:layout_width="340dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="right"
        android:background="@android:color/darker_gray"
        tools:ignore="RtlHardcoded" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:id="@+id/lblGeolocalizacion"
            android:padding="12dp"
            android:layout_width="205dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@color/blueSky"
            android:layout_weight="0.81"
            tools:ignore="InefficientWeight" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="right"
            android:id="@+id/imgFlagUpdate1"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </LinearLayout>




</LinearLayout>

<View
    android:layout_width="8dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@android:color/holo_green_light"
    tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
    android:layout_alignParentStart="true" />


</android.support.v7.widget.CardView>